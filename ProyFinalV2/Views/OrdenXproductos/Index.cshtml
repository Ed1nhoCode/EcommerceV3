@model IEnumerable<ProyFinalV2.Models.OrdenXproducto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre Cliente
            </th>

            <th>
                Nombre Producto
            </th>

            <th>
                Total (Colones)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Orden.IdUsuarioNavigation.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Orden.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
